    @html.actionlink("create new", "create")
</button>*@



<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.salary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Maneger)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>
        
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.salary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem=> item.Maneger)   
        </td>
        <td>
            @Html.DisplayFor(modelItem=> item.Department)
        </td>
        <td>
            @Html.DisplayFor(modelItem=> item.Role)
        </td>
        <td>

            <button  class="btn btn-outline-primary"> @Html.ActionLink("Details", "Details", new { id = item.id })</button>     |

            <button  class="btn btn-outline-success"> @Html.ActionLink("Edit", "Edit", new { id = item.id })</button>        |

            <button  class="btn btn-outline-danger">@Html.ActionLink("Delete", "Delete", new { id = item.id })</button>
        </td>
    </tr>
}

</table>
